<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_hup"
    android:background="@drawable/hospital"
    tools:context=".HospitalUpdatePassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/app_bar"/>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/Navigation_view_hup"
        android:layout_gravity="start"
        android:background="#0e66b9"
        app:itemTextColor="@color/white"
        app:headerLayout="@layout/header_navigation"
        app:menu="@menu/main_menu_hospital"
        app:itemHorizontalPadding="40dp"
        app:itemIconTint="@color/white"
        app:itemBackground="@drawable/menu_item_padding"
        app:itemTextAppearance="@style/TextViewStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="175dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change Password"
                android:gravity="center"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/hos_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="New Password"
                android:inputType="textPassword"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:background="@drawable/input_bg"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="16dp"
                android:text="must enter 6 characters"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/hos_new_cpwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="10dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:background="@drawable/input_bg"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:id="@+id/update_to_profile_hospital"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:text="Update"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_save_bg"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="685dp"
        android:gravity="center"
        android:background="@drawable/input_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hos_chan_to_home"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_bottom"/>

        <ImageView
            android:id="@+id/hos_chan_to_doctor"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@drawable/group_bottom"/>

        <ImageView
            android:id="@+id/hos_chan_to_prof"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/person_bottom"/>

        <ImageView
            android:id="@+id/hos_chan_to_appointment"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/event_available_bottom"/>

        <ImageView
            android:id="@+id/hos_chan_to_extra"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/add_box_bottom"/>

        <ImageView
            android:id="@+id/hos_chan_to_logout"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/login_bottom"/>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>