<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_hep"
    android:background="@drawable/hospital"
    tools:context=".HospitalEditProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/app_bar"/>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/Navigation_view_hep"
        android:layout_gravity="start"
        android:background="#0e66b9"
        app:itemTextColor="@color/white"
        app:headerLayout="@layout/header_navigation"
        app:menu="@menu/main_menu_hospital"
        app:itemHorizontalPadding="40dp"
        app:itemIconTint="@color/white"
        app:itemBackground="@drawable/menu_item_padding"
        app:itemTextAppearance="@style/TextViewStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hospital Name"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_hospital_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter hospital name"
                android:background="@drawable/input_bg"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_hospital_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_bg"
                android:hint="Enter email address"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hospital Address"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_bg"
                android:hint="Enter hospital address"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hospital Verification"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/edit_register_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_bg"
                android:inputType="number"
                android:hint="Enter hospital verification number"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingTop="7dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone Number"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_hospital_phone_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/input_bg"
                android:inputType="number"
                android:hint="011XXXXXXX-(10 digits)"
                android:textSize="16dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:id="@+id/edit_to_profile_hospital"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:text="Save"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_save_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="685dp"
        android:gravity="center"
        android:background="@drawable/input_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hos_edit_pro_to_home"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_bottom"/>

        <ImageView
            android:id="@+id/hos_edit_pro_to_doctor"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:src="@drawable/group_bottom"/>

        <ImageView
            android:id="@+id/hos_edit_pro_to_prof"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/person_bottom_red"/>

        <ImageView
            android:id="@+id/hos_edit_pro_to_appointment"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/event_available_bottom"/>

        <ImageView
            android:id="@+id/hos_edit_pro_to_extra"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/add_box_bottom"/>

        <ImageView
            android:id="@+id/hos_edit_pro_to_logout"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/login_bottom"/>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>